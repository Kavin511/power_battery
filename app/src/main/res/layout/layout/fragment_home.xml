<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_background"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".home"
        android:backgroundTint="#00FFFFFF"
        >
    <RelativeLayout
                android:id="@+id/contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:elevation="7dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingTop="2.5dp"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:id="@+id/linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:elevation="8dp"
                    android:background="@drawable/charger_background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                    <TextView
                        android:id="@+id/current"
                        android:layout_width="0dp"
                        android:layout_weight=".45"
                        android:layout_height="160dp"
                        android:layout_alignEnd="@+id/waveLoadingView"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:backgroundTint="#F1FAF9"
                        android:ems="10"
                        android:gravity="center"
                        android:padding="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/NA"
                        app:drawableTint="@android:color/holo_blue_light"
                        app:drawableTopCompat="@drawable/ic_current"
                        tools:ignore="RtlSymmetry" />

                    <me.itangqi.waveloadingview.WaveLoadingView
                        android:id="@+id/waveLoadingView"
                        android:layout_width="0dp"
                        android:layout_weight=".45"
                        android:layout_height="160dp"
                        android:layout_margin="5dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="end"
                        android:backgroundTint="#FFF"
                        android:clickable="true"
                        android:elevation="10dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:padding="40dp"
                        app:wlv_borderColor="@android:color/holo_blue_dark"
                        app:wlv_borderWidth="1dp"
                        app:wlv_shapeType="circle"
                        app:wlv_titleCenterColor="@color/waveText"
                        app:wlv_titleCenterSize="24sp"
                        app:wlv_titleCenterStrokeWidth="18sp"
                        app:wlv_waveColor="@color/colorPrimary"
                        app:wlv_wave_background_Color="#fff" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearlayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:background="#fff"
                    android:elevation="3dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="5dp"
                    android:layout_below="@+id/linearlayout"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:id="@+id/temperature"
                        android:layout_width="0dp"
                        android:layout_weight=".45"
                        android:layout_height="160dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/tiles_background"
                        android:layout_margin="5dp"
                        android:elevation="2dp"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/NA"
                        app:drawableTopCompat="@drawable/ic_temperature"
                        tools:ignore="RtlSymmetry" />
                    <TextView
                        android:id="@+id/health"
                        android:layout_width="0dp"
                        android:layout_weight=".45"
                        android:layout_height="160dp"
                        android:layout_margin="5dp"
                        android:elevation="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:background="@drawable/tiles_background"
                        android:gravity="center"
                        android:text="@string/NA"
                        android:textSize="16sp"
                        app:drawableTopCompat="@drawable/ic_health_status"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearlayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:elevation="3dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_below="@id/linearlayout3">
                    <TextView
                        android:id="@+id/plugged"
                        android:layout_width="0dp"
                        android:layout_weight=".45"
                        android:layout_height="160dp"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/NA"
                        android:layout_margin="5dp"
                        android:background="@drawable/tiles_background"
                        android:elevation="2dp"
                        android:layout_alignParentEnd="true"
                        app:drawableTopCompat="@drawable/ic_ac_plug"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/voltage"
                        android:layout_width="0dp"
                        android:layout_weight=".45"
                        android:layout_height="160dp"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/NA"
                        android:layout_margin="5dp"
                        android:background="@drawable/tiles_background"
                        android:elevation="2dp"
                        android:layout_alignParentStart="true"
                        app:drawableTopCompat="@drawable/ic_voltage"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearlayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:elevation="3dp"
                    android:background="#fff"
                    android:layout_marginRight="2dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_below="@id/linearlayout2">
                    <TextView
                        android:id="@+id/available_capacity"
                        android:layout_width="0dp"
                        android:layout_weight=".45"
                        android:layout_height="160dp"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/NA"
                        android:elevation="2dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/tiles_background"
                        android:layout_alignParentStart="true"
                        tools:ignore="RtlSymmetry"
                        app:drawableTopCompat="@drawable/ic_remaining" />
                    <TextView
                        android:id="@+id/total_capacity"
                        android:layout_width="0dp"
                        android:layout_weight=".45"
                        android:layout_height="160dp"
                        android:ems="10"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:text="@string/NA"
                        android:elevation="2dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/tiles_background"
                        app:drawableTopCompat="@drawable/ic_capacity_full"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:elevation="3dp"
                    android:background="#fff"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:paddingBottom="5dp"
                    android:layout_below="@id/linearlayout1">

                    <TextView
                        android:id="@+id/technology"
                        android:layout_width="0dp"
                        android:layout_weight=".45"
                        android:layout_height="160dp"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/NA"
                        android:layout_margin="5dp"
                        android:background="@drawable/tiles_background"
                        android:elevation="2dp"
                        android:layout_alignParentStart="true"
                        app:drawableTopCompat="@drawable/ic_battery_technology"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/remaining_time"
                        android:layout_width="0dp"
                        android:layout_weight=".45"
                        android:layout_height="160dp"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/NA"
                        android:elevation="2dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/tiles_background"
                        android:layout_alignParentEnd="true"
                        app:drawableTopCompat="@drawable/ic_remaining_time"
                        tools:ignore="RtlSymmetry" />


                </LinearLayout>
    <LinearLayout
        android:id="@+id/linearlayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/linearlayout4">
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3798430149757150/8276834281">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>
    </RelativeLayout>
    </ScrollView>
